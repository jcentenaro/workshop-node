<%- contentFor('title') %> Inicio <%- contentFor('body') %>

<%- contentFor('styles') %>

<%- contentFor('body') %>

    <main>
        <h1>Main</h1>

        <h2>Crear Tarea</h2>
        
        <form action="/" method="post">
            <div>
                <label for="title">Nombre: </label>
                <input type="text" name="title" id="title">
            </div>
            <button type="submit">Enviar</button>
        </form>

        <h3>Listado de tareas</h3>
        <ul>
        <% tareas.forEach(tarea => { %>
            <%- include("partials/item", { tarea }) %>
        <% }) %>
        </ul>
    </main>

    <%- contentFor('scripts') %>
    